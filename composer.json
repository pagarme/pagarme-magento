{
    "name": "pagarme/pagarme-magento",
    "description": "Official magento module to connect to Pagar.me payment provider",
    "type": "magento-module",
    "homepage": "https://github.com/pagarme/pagarme-magento",
    "license": "MIT",
    "authors": [
        {
            "name": "Pagar.me",
            "email": "suporte@pagar.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "PagarMe\\Magento\\Test\\": "tests/acceptance/"
        }
    },
    "require": {
        "pagarme/pagarme-php": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8",
        "squizlabs/php_codesniffer": "3.*",
        "behat/behat": "~3.3",
        "behat/mink": "^1.7",
        "behat/mink-selenium2-driver": "^1.3",
        "behat/mink-extension": "~2.2",
        "n98/magerun": "@stable"
    },
    "archive": {
        "exclude": [
            ".coveralls.yml",
            ".behat.yml",
            ".travis.yml",
            "Dockerfile",
            "forgotten_keys.sh",
            "LICENSE",
            "magentosmtp",
            "phpcsruleset.xml",
            "phpunit.xml",
            "start2",
            "README.md",
            "CHANGELOG.md",
            "PULLREQUEST-TEMPLATE.md",
            "ISSUE-TEMPLATE.md",
            "CONTRUBUTING.md",
            "docker-compose.yml",
            ".env",
            "tests/",
            "Makefile",
            "behat.yml",
            "CONTRIBUTING.md",
            ".gitignore",
            ".circleci/",
            "composer.json",
            "composer.lock",
            "script/",
            ".github/"
        ]
    }
}
