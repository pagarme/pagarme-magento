<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <block type="core/text" name="pagarme.cdn.js.checkout" ifconfig="payment/pagarme_v2_settings/checkout_active">
                <action method="setText">
                    <text><![CDATA[<script src="https://assets.pagar.me/checkout/checkout.js" type="text/javascript"></script>]]></text>
                </action>
        	</block>
        </reference>
    </default>
    <checkout_onepage_success>
        <reference name="content">
            <block type="pagarme_v2_checkout/success" name="pagarme_v2_checkout.success" template="pagarmev2/success.phtml"/>
        </reference>
    </checkout_onepage_success>
    <sales_order_view>
        <reference name="order_totals">
            <block type="pagarme_v2_checkout/sales_RateAmount" name="pagarme_v2_checkout.rateamount"/>
        </reference>
    </sales_order_view>
    <onestepcheckout_index_index>
        <reference name="checkout.onepage.review.info.totals">
            <action method="setTemplate">
                <template>pagarmev2/extra.phtml</template>
            </action>
        </reference>
    </onestepcheckout_index_index>
</layout>
