    <input type="hidden" value="" name="payment[pagarme_v2_checkout_payment_method]" id="pagarme_v2_checkout_payment_method" />
    <input type="hidden" value="" name="payment[pagarme_v2_checkout_interest_rate]" id="pagarme_v2_checkout_interest_rate" />

    <div style="display:none;" id="advice-required-entry-pagarme-checkout-hash" class="validation-advice">
